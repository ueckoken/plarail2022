FROM golang:1.20.3-bullseye AS builder

ENV CGO_ENABLED=0
WORKDIR /control
COPY ./go.mod ./go.sum /control/
RUN go mod download
COPY . /control
RUN make build

FROM gcr.io/distroless/static-debian11:nonroot AS runner
COPY --from=builder --chown=nonroot:nonroot /control/external /external
ENTRYPOINT [ "/external" ]
